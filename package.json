{
  "name": "teammeet",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "overrides": {
    "@teammeet/mobile": {
      "react": "19.1.0",
      "react-dom": "19.1.0"
    }
  },
  "scripts": {
    "dev": "bun run --filter apps/web dev",
    "dev:web": "bun run --filter apps/web dev",
    "dev:mobile": "bun run --filter apps/mobile start",
    "build": "bun run --filter apps/web build",
    "build:web": "bun run --filter apps/web build",
    "lint": "bun run --filter apps/web lint",
    "test": "bun run --filter apps/web test",
    "test:auth": "bun run --filter apps/web test:auth",
    "test:payments": "bun run --filter apps/web test:payments",
    "test:security": "bun run --filter apps/web test:security"
  }
}